<view class="tesla">
<view class="swiper-container">
  <swiper bindchange="onSwiperChange">
    <swiper-item  wx:for="{{ list }}"  wx:key="index">
    <view class="swiper-item">
      <image src="{{item.imageUrl}}" mode="aspectFill"></image>
    </view>
    </swiper-item>
  </swiper>
  <view class="swiper-content" wx:for="{{ list }}" wx:key="index" wx:if="{{ index == current }}">
    <view class="title">
      {{ item.title }}
    </view>
    <view class="description">
      <view class="desc-item"  wx:for="{{ item.specs }}" wx:key="index">
        <view class="desc-title">{{ item.title }}</view>
        <view class="desc-subtitle">{{ item.subtitle }}</view>
      </view>
    </view>
    <view class="action">
      <view class="action-button">
        <button>预约试驾</button>
        <view class="action-button-back"></view>
      </view>
      <view class="action-add">查看配置</view>
    </view>
  </view>
  <view class="swiper-indicator">
  <view wx:for="{{ list }}" wx:key="index" class="indicator {{ current === index ? 'active': '' }}"></view>
  </view>
</view>
</view>
