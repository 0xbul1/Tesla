.tesla .swiper-container {
  width: 100%;
  height: 85vh;
}
.tesla .swiper-container swiper {
  height: 100%;
}

.tesla .swiper-container swiper .swiper-item {
  height: 100%;
  position: relative;
}
.tesla .swiper-container swiper .swiper-item image {
  display: block;
  width: 100%;
  height: 100%;
}
.tesla .swiper-container swiper .swiper-item .swiper-content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .title {
  font-size: 80rpx;
  margin-top: 250rpx;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .description {
  width: 100%;
  margin-top: 200rpx;
  display: flex;
  justify-content: space-evenly;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .description .desc-item {
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .description .desc-item .desc-title {
  font-size: 50rpx;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .description .desc-item .desc-subtitle {
  margin-top: 10rpx;
  font-size: 25rpx;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .action {
  margin-top: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .action .action-button {
  border-radius: 30rpx;
  overflow: hidden;
  position: relative;
  width: 100%;
  padding: 5rpx 0;
  z-index: 1;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .action .action-button button {
  color: #ffffff;
  background: none;
  z-index: 1;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .action .action-button .action-button-back {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #000000;
  z-index: 0;
  opacity: 0.4;
}
.tesla .swiper-container swiper .swiper-item .swiper-content .action .action-add {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
  text-decoration: underline;
}

.tesla .swiper-indicator {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}
.tesla .swiper-indicator .indicator {
  width: 80rpx;
  height: 6rpx;
  background-color: #ffffff;
}

.tesla .swiper-indicator .indicator.active {
  background-color: #bcbcb7;
}